<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/saveButtonClickTimeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save button click time"
        android:onClick="saveButtonClickTimes" />

    <ListView
        android:id="@+id/buttonClickTimesList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/calculateEnergyAndPowerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate energy and power"
        android:onClick="calculateEnergyAndPower"/>

</LinearLayout>
